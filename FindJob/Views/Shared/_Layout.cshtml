    <script type="text/javascript">
        $(document).ready(function () {
            $('.datepicker').each(function () {
                $(this).datepicker({
                    changeMonth: true,
                    changeYear: true,
                    dateFormat: "dd.mm.yyyy"
                });
            });
        });
